
<h1>Update Deck</h1>

<div>
  <form action="/deck/update" method="post">
    <label for='deck'>
      Deck<br/>
      <select id="question" name="question_dropdown">
        <% @decks.each do |deck| %>
            <option name="deck[title]" value="deck[title]"><%= deck.title %></option>
        <% end %>
      </select>
    </label>    

    <label for='question'>
      Question<br/>
      <select id="question" name="question_dropdown">
        <% @decks.each do |deck| %>
          <% deck.cards.each do |card| %>
            <option name="card[question]" value="card[question]"><%= card.question %></option>
            <% @answer = card.answer %>
          <% end %>
        <% end %>
      </select>

      <button class="btn" type="submit">Show Answer</button>
    </label>

<label for='answer'>
  Answer<br/>
  <textarea id="answer" rows='10' cols='60' name="card[answer]"><%= @answer.to_s %></textarea><br/>
</label>    

    <!-- <button class="btn" type="submit">Add</button> -->
  </form>

  <!-- not exactly sure how to map the button to save the deck (below) yet -->
  
  <button class="btn">Save Deck</button>
  <button class="btn">Delete Deck</button>

</div>

